<%= form_with(model: @address, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street, required: true, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, required: true %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, required: true %>
  </div>
  <div class="field">
    <%= f.label :zip %>
    <%= f.number_field :zip, required: true %>
  </div>
  <%= f.submit class: "ui purple inverted button" %>
<% end %>