<%= form_with(model: @list, url: [@trip, @list], local: true, class: "ui form") do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "input" %>
    </div>
   <div class="field">
     <%= f.label :days %>
     <%= f.text_field :days, class: "input" %>
   </div>
   <%= f.submit nil, class: "ui blue button" %>
  <% end %>
